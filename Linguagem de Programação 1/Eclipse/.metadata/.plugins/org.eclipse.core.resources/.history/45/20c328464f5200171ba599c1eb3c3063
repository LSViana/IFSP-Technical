package JoaoSupermarket.Model;
import java.time.LocalDate;
import javafx.beans.property.IntegerProperty;
import javafx.beans.property.ObjectProperty;
import javafx.beans.property.SimpleIntegerProperty;
import javafx.beans.property.SimpleObjectProperty;
import javafx.beans.property.SimpleStringProperty;
import javafx.beans.property.StringProperty;
import javafx.beans.property.IntegerProperty;
import javafx.beans.property.ObjectProperty;

public class Produto {
	private StringProperty Nome;
	private ObjectProperty<Categoria> Categoria;
	private ObjectProperty<LocalDate> DataDeValidade;
	private IntegerProperty Estoque;
	private IntegerProperty EstoqueMinimo;

	// Default constructor
	public Produto() {
		this("", 0, 0);
	}

	// Constructors with some initial data
	public Produto(String Nome, int Estoque, int EstoqueMinimo) {
		this.Nome = new SimpleStringProperty(Nome);
		this.Estoque = new SimpleIntegerProperty(Estoque);
		this.EstoqueMinimo = new SimpleIntegerProperty(EstoqueMinimo);
		// The standard initial data will be "tomorrow"
		this.DataDeValidade = new SimpleObjectProperty<LocalDate>(LocalDate.now().plusDays(1));
		this.Categoria = null;
	}
	public Produto(String Nome, int Estoque, int EstoqueMinimo, LocalDate DataDeValidade) {
		this.Nome = new SimpleStringProperty(Nome);
		this.Estoque = new SimpleIntegerProperty(Estoque);
		this.EstoqueMinimo = new SimpleIntegerProperty(EstoqueMinimo);
		this.DataDeValidade = new SimpleObjectProperty<LocalDate>(DataDeValidade.plusDays(1));
		this.Categoria = null;
	}
	public Produto(String Nome, int Estoque, int EstoqueMinimo, LocalDate DataDeValidade, Categoria Categoria) {
		this.Nome = new SimpleStringProperty(Nome);
		this.Estoque = new SimpleIntegerProperty(Estoque);
		this.EstoqueMinimo = new SimpleIntegerProperty(EstoqueMinimo);
		this.DataDeValidade = new SimpleObjectProperty<LocalDate>(DataDeValidade.plusDays(1));
		this.Categoria = new SimpleObjectProperty<Categoria>(Categoria);
	}

	// Getters and Setters
	public String getNome() {
		return Nome.get();
	}

	public void setNome(String nome) {
		Nome.set(nome);
	}

	public StringProperty NomeProperty() {
		return Nome;
	}

	public ObjectProperty<Categoria> getCategoria() {
		return Categoria;
	}

	public void setCategoria(ObjectProperty<Categoria> categoria) {
		Categoria = categoria;
	}

	public ObjectProperty<LocalDate> getDataDeValidade() {
		return DataDeValidade;
	}

	public void setDataDeValidade(ObjectProperty<LocalDate> dataDeValidade) {
		DataDeValidade = dataDeValidade;
	}

	public IntegerProperty getEstoque() {
		return Estoque;
	}

	public void setEstoque(IntegerProperty estoque) {
		Estoque = estoque;
	}

	public IntegerProperty getEstoqueMinimo() {
		return EstoqueMinimo;
	}

	public void setEstoqueMinimo(IntegerProperty estoqueMinimo) {
		EstoqueMinimo = estoqueMinimo;
	}
}
