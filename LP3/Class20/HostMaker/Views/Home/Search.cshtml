@using System.Diagnostics.Eventing.Reader
@model IEnumerable<HostMaker.Establishment>

@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>

<form action="Search" method="get">
    <label>
        @Html.DisplayNameFor(model => model.Category)
    </label>
    @Html.DropDownList("idCategory")
    <label>
        @Html.DisplayNameFor(model => model.City)
    </label>
    @Html.DropDownList("idCity")
    <button value="Search" type="submit">Search</button>
</form>

@if (ViewBag.DidSearch != null && ViewBag.DidSearch == true)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Site)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telephone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Site)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City.Name)
                </td>
            </tr>
        }

    </table>
}
else
{
    <div class="jumbotron" style="justify-content: center; display: flex; padding: 16px; margin: 16px;">
        <h2>Preencha os campos para realizar uma pesquisa!</h2>
    </div>
}
